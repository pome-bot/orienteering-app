  .setting-group-form__field
    = f.label :name, "Control name", class: 'setting-group-form__label'
    = f.text_field :name, class: 'setting-group-form__input', placeholder: 'input control name'
  .setting-group-form__field
    = f.label :question, "question", class: 'setting-group-form__label'
    = f.text_area :question, class: 'setting-group-form__input', placeholder: 'input question', size: "50x10"
  .setting-group-form__field
    = f.label :answer, "answer", class: 'setting-group-form__label'
    = f.text_field :answer, class: 'setting-group-form__input', placeholder: 'input answer'
  .setting-group-form__field
    = f.label :position_x, "position_x", class: 'setting-group-form__label'
    = f.text_field :position_x, class: 'setting-group-form__input', value: "139.7667767", readonly: ""
  .setting-group-form__field
    = f.label :position_y, "position_y", class: 'setting-group-form__label'
    = f.text_field :position_y, class: 'setting-group-form__input', value: "35.6812584", readonly: ""
